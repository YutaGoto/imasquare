<div class='container section'>
  <form action='/entries/<%= @entry['id'] %>' method='post' class='col s12'>
    <div class='row'>
      <div class='input-field col s12'>
        <label for='name'>タイトル</label>
        <input type='text' name='title' value='<%= @entry['title'] %>' />
      </div>
    </div>
    <div class='row'>
      <div class='input-field col s12'>
        <label for='name'>概要(markdownが使えます)</label>
        <textarea name='summary' class='materialize-textarea'><%= @entry['summary'] %></textarea>
      </div>
    </div>
    <input type='submit' value='登録' class='waves-effect waves-light btn orange' />
  </form>
</div>
