<nav class='light-blue'>
  <div class='nav-wrapper container'>
    <div class='col s12'>
      <a href='/' class='breadcrumb'>Top</a>
      <a href='/teams/<%= @entry['team_id'] %>' class='breadcrumb'><%= @entry['team_name'] %></a>
      <a href='/entries/<%= @entry['id'] %>' class='breadcrumb'><%= @entry['title'] %></a>
