<div class='container section'>
  <div class='row'>
    <div class='col s12'>
      <h3>Entries</h3>
      <table class='bordered highlight'>
        <thead>
          <tr>
            <th>id</th>
            <th>team</th>
            <th>user</th>
            <th>title</th>
            <th>資料</th>
            <th>デモ</th>
            <th>発表順希望</th>
            <th>時間希望</th>
            <th>note</th>
          </tr>
        </thead>
        <tbody>
          <% @entries.each do |entry| %>
            <tr>
              <td><%= entry['id'] %></td>
              <td><a href='/teams/<%= entry['team_id'] %>' target='_blank'><%= entry['team_name'] %></a></td>
              <td>
                <form action='/admin/entries/<%= entry['id'] %>' method='post'>
                  <select name='author_id'>
                    <% @users.each do |user| %>
                      <option value='<%= user['id'] %>'<%= entry['author_id'] == user['id'] ? ' selected' : ''%>><%= user['nickname'] %></option>
                    <% end %>
                  </select>
                  <button class="btn waves-effect waves-light blue" type="submit">Update</button>
                </form>
              </td>
              <td><a href='/entries/<%= entry['id'] %>' target='_blank'><%= h(entry['title']) %></a></td>
              <td><%= entry['slide_available'] == 1 ? 'はい' : 'いいえ' %></td>
              <td><%= entry['demo_available'] == 1 ? 'はい' : 'いいえ' %></td>
              <td><%= entry['order_request'] %></td>
              <td><%= entry['time_request'] %></td>
              <td><%= entry['note'] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col s12'>
      <h3>Users</h3>
      <table class='bordered highlight'>
        <thead>
          <tr>
            <th>id</th>
            <th>nickname</th>
            <th>avatar_url</th>
            <th>is_admin</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user['id'] %></td>
              <td><%= user['nickname'] %></td>
              <td><%= user['avatar_url'] %></td>
              <td><%= user['is_admin'] == 1 ? 'o' : 'x' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <form action='/admin/users' method='post'>
        <div class="input-field col s12 m4">
          <input name="id" type="text">
          <label for="id">Slack user id</label>
        </div>
        <div class="input-field col s12 m4">
          <input name="nickname" type="text">
          <label for="nickname">nickname</label>
        </div>
        <div class="input-field col s12 m4">
          <input name="avatar_url" type="text">
          <label for="avatar_url">avatar_url</label>
        </div>
        <div class="input-field col s12 m12">
          <button class="btn waves-effect waves-light blue" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
